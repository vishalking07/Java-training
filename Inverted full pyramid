import java.util.*;

public class Main
{
	public static void main(String[] args) {
		Scanner sc = new Scanner (System.in);
		int n = sc.nextInt();
		int temp=1,sp=n*2-1;
		for(int i=0;i<n;i++){
		    for(int s=0;s<i;s++){
		        System.out.print("  ");
		    }
		    for(int j=sp;j>0;j--){
		            System.out.print("* ");
		    }
		    sp-=2;   
		System.out.printf("\n");
		}
	}
}
