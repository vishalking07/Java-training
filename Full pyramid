import java.util.*;

public class Main
{
	public static void main(String[] args) {
		Scanner sc = new Scanner (System.in);
		int n = sc.nextInt();
		int temp=1,sp=n;
		for(int i=0;i<n;i++){
		    for(int s=0;s<sp-i;s++){
		        System.out.print("  ");
		    }
		    for(int j=0;j<temp;j++){
		            System.out.print("* ");
		    }
		       temp+=2; 
		System.out.printf("\n");
		}
	}
}
