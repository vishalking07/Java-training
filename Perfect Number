import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n=sc.nextInt();
		int sum=0,i;
		for (i=1;i<n;i++){
		    if(n%i==0){
		      //  System.out.print(i);
		      //  System.out.print("\n");
		    sum+=i;
		    }
		} 
		    System.out.printf("Sum=%d",sum);
		    if (n==sum){
		        System.out.print("\nIts a perfect Number");
		    }
		    else{
		        System.out.print("\nNope");
		    }
	}
}
